{
  "name": "nextjs-ts-starter",
  "version": "0.0.1",
  "private": false,
  "description": "Get started with NextJS and Typescript",
  "author": "Damian Morten",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.ts **/*.tsx **/*.scss",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/lodash": "^4.14.168",
    "@types/mongoose": "^5.10.3",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "eslint": "^7.21.0",
    "framer-motion": "^4",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "mongodb": "^3.6.4",
    "mongoose": "^5.12.3",
    "next": "^10.2.1",
    "next-auth": "^4.0.1",
    "next-connect": "^0.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "sass": "^1.32.8",
    "swr": "^0.4.2",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.3",
    "@commitlint/config-conventional": "^12.1.3",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^6.0.0",
    "lint-staged": "10.5.2",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "yarn format",
      "eslint --fix"
    ],
    "*.scss": "prettier --write"
  }
}
